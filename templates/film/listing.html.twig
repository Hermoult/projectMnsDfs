{% extends "base.html.twig" %}

{% block title %}
	Films
{% endblock %}

{% block body %}
	<div class="textAlign_center">Voici la liste des films disponible :</div>

	{% if films|length == 0  %}
		<div class=" textalign_center">
			Pas de film disponible
		</div>
	{% endif %}
	<div class="flex_row flexWrap_wrap justifyContent_spaceAround textAlign_center">
		{% for film in films %}
			<div class="filmBlock">
				<div class="mb_10">Titre :
					{{ film.title }}</div>
				<div class="mb_10">RÃ©alisateur :
					{{ film.realisator }}</div>
